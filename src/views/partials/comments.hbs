{{#if sidebar.comments}}
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="fas fa-comments"></i>Latest Comments</h5>
    </div>
    <div class="card-body">
        {{#each sidebar.comments}}
            <div class="row">
                <div class="col">
                    <a href="/images/{{image.uniqueId}}"></a>
                    <img src="/public/upload/{{image.filename}}" class="img-thumbnail w-70"alt="">
                </div>
                <div class="col">
                    <blockquote class="w-100">
                        <p>{{comment}}</p>
                        <footer class="blockquote-footer">
                               <span>{{name}}</span> 
                               <span>{{timeago timestan}}</span>
                        </footer>
                    </blockquote>
                </div>
            </div>
        {{/each}}
    </div>
</div>
{{/if}}

